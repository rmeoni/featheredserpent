<div class="destinations">
	<div class="page-nav">
		<div class="dropdown">
 			<button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
   				<i class="material-icons" id="filter">filter_list</i>
    			<span class="caret"></span>
  			</button>
  			<ul class="dropdown-menu" id="filter-menu" aria-labelledby="dLabel">
    			<li><i class="material-icons">sort_by_alpha</i>Name</li>
				<li><i class="material-icons">favorite</i>Most Visited</li>
				<li><i class="material-icons">whatshot</i>Hottest</li>
				<li><i class="material-icons">trending_up</i>Trending</li>
				<li><i class="material-icons">my_location</i>Near Me</li>
  			</ul>
		</div>
		<h2><%= @destination.name %></h2>
			<ul class="pull-right">
				<li class="square"><i class="material-icons" id="square">reorder</i></li>
				<li class="squares"><i class="material-icons">apps</i></li>
			</ul>
	
	</div>
	<div class= "container">
		<div class="col-md-4 col-xs-4 col-md-offset-8 col-xs-offset-3">
				<% flash.each do |name, msg| -%>
    			<%= content_tag :div, msg, class: name %>
    			<% end %>
			</div>
		<div class="app-nav">
			<%= link_to @destination.tag do %>
			<i class="material-icons">chevron_left</i>
			<% end %>
		</div>
		<div class="destination row">
			<div class="col-md-6 col-xs-11">
				<img class="img-responsive" src="<%= @destination.image %>"/>
				<h2><%= @destination.name %></h2>
				<p><%= @destination.description %></p>
				<div class="action-card">
				<%if current_user && current_user.editor? || current_user.admin? %>
					<%= link_to edit_destination_path(@destination) do %>
					<i class="material-icons">mode_edit</i>
					<% end %>
				<% end %>
				<% if current_user && current_user.admin?() %>
					<%= link_to destination_path(@destination), method: "delete",data: {confirm: "Are you sure you want to delete this?"} do %>
					<i class="material-icons">delete_forever</i>
					<% end %>
				</div>
				<% end %>
			</div>
		</div>
		<div class="col-md-5 pull-right col-xs-12">
				<h3>Tips</h3>
				<% if current_user %>
				<div class="tip-form">
					<%= form_for(message) do |f| %>
						<%= f.text_area :content , :placeholder => "Share a tip about this place in 160 characters or less" %>
						<%= f.submit "Tip", :class => "btn pull-right" %>	
					<% end %>

					
				</div>
				<% end %>
			</div>
	</div>
</div>
<div class="clear-fix">
</div>

