<div class="users">
	<div class="container">
		<div class="col-md-4 col-xs-4 col-md-offset-8 col-xs-offset-3">
			<% flash.each do |name, msg| -%>
    		<%= content_tag :div, msg, class: name %>
    		<% end -%>	
		</div>
		<h3> Users </h3>
		<% @users.each do |u| %>
		<div class="row">
			<div class="col-md-3">
				<p><%= u.id %></p>
				<h3><%= u.first_name %> <%= u.last_name %><%= link_to edit_user_path(u) do %>
					<% if current_user %>
					<i class="material-icons">mode_edit</i>
					<% end %>
					<% end %> 
					<%= link_to user_path(u), method: "delete", data: {confirm: "Are you sure you want to delete this?"} do %>
					<% if current_user %>
					<i class="material-icons">delete_forever</i>
					<% end %>
					<% end %></h3>
				<h4><%= u.role %></h4>
				<p><%= u.email %></p>
			</div>
		</div>
		<% end %>
	</div>
</div>
<div class="clear-fix">
</div>