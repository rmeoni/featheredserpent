<div class="tips">
	<div class="container">
		<div class="app-nav">
		<%= link_to tip_new_path do %>
		<i class="material-icons">add_circle</i>
		<% end %>
		</div>
		<h2>Tips</h2>
		<% @tips.each do |t| %>
		<div class="row">
			<div class="col-md-3 col-xs-11" id="tip">
				<p><%= t.user_id %></p>
				<%= t.content %>
			<div class="tip-action pull-right">
					<i class="material-icons">thumb_up</i>
					<i class="material-icons">thumb_down</i>
					<% if current_user && current_user.admin?() %>
						<%= link_to tag_path(t), method: "delete", data: {confirm: "Are you sure you want to delete this?"} do %>
						<i class="material-icons">delete_forever</i>
					<% end %>
				<% end %>	
				<% if current_user && current_user.admin? || current_user.editor?() %>
					<%= link_to edit_tip_path(t) do %>
					<i class="material-icons">mode_edit</i>
					<% end %>
				<% end %>
				</div>	
			</div>
		</div>
		<% end %>
	</div>
</div>
<div class="clear-fix">
</div>